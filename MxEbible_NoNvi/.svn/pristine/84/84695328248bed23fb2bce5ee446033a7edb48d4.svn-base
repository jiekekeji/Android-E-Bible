<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/blue" >

        <ImageButton
            android:id="@+id/back_home_btn"
            android:layout_width="@dimen/title_bar_btn_width"
            android:layout_height="@dimen/title_bar_btn_height"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="back_home_btn"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="About Us"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 第一部分 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="标题"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="About the New King James Version (NKJV)"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="The New King James Version is an up-to-date translation of the Bible by devout scholars, it maintains the beauty of the King James Version while increasing the accuracy and making the meaning clearer for today’s reader. The NKJV presents the Bible with updated clarity that readers truly appreciate, and thus is amongst the best Bible translations for studying God’s Word."
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="The NKJV was commissioned in 1975 by Thomas Nelson Publishers, and more than 120 respected Bible scholars, church leaders, and lay Christians worked for seven years to create a more modern translation of Scripture, yet one that would retain the purity and stylistic beauty of the original King James. Faithfulness to the original Bible texts in Greek, Hebrew, and Aramaic, the NKJV translation applies the most recent research in linguistics, archaeology, and textual studies."
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="Bob Souer is the featured reader for the non-dramatic version. Stephen Johnson is the featured reader for the dramatic version."
                android:textColor="@color/black" />
            <!-- 第二部分 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="段落标题"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="About the New International Version (NIV)"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="The New International Version (NIV) is an English translation of the Christian Bible. The NIV was originally published in the 1970s, after more than five decades of work that united evangelicals in an inter-denominational effort to provide a trustworthy, accessible version of the Bible for the English-speaking world. It was updated in 1984 and again in 2011, and has become one of the best-selling modern translations, with millions relying on this faithful translation of God’s Holy Word."
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="Narrated by George Sarris."
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>